<h1>Edit Blood</h1>
<form class="form" method="post" action="/blood/{{id}}?_method=PUT">
	<div class="form-group">
		<label for="cost">Cost</label>
		<input value="{{cost}}" type="number" class="form-control" id="cost" name="cost" placeholder="Enter a cost">
		<label for="type">Type</label>
		<input value="{{type}}" type="text" class="form-control" id="type" name="type" placeholder="Enter a type">
	</div>
	<div class="flexCenter">
		<a href="/blood/" type="button" class="btn btn-primary">Back</a>
		<button type="submit" class="btn btn-danger">Update</button>
		
	</div>
</form>