<h1>Create new Donation</h1>
<form class="form" method="post" action="/donation">
	<div class="form-group">
		<label for="did">Name</label>
		<select name="did" id="did" class="form-control">
		{{#each donor}}
			<option value="{{id}}">{{name}}</option>
		{{/each}}
		</select>
		<label for="emp_id">Employee</label>
		<select name="emp_id" id="emp_id" class="form-control">
		{{#each employee}}
			<option value="{{id}}">{{name}}</option>
		{{/each}}
		</select>
		<label for="bno">Blood Bank</label>
		<select name="bno" id="bno" class="form-control">
		{{#each bloodbank}}
			<option value="{{id}}">{{id}}</option>
		{{/each}}
		</select>		
	</div>
	<div class="flexCenter">
		<a href="/donation/" type="button" class="btn btn-primary">Back</a>
		<button type="submit" class="btn btn-success">Create</button>
		
	</div>
</form>