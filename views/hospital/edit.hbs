<h1>Edit Hospital</h1>
<form class="form" method="post" action="/hospital/{{id}}?_method=PUT">
	<div class="form-group">
		<label for="name">Name</label>
		<input value="{{name}}" type="text" class="form-control" id="name" name="name" placeholder="Enter a name">
		<label for="address">Address</label>
		<input value="{{address}}" type="text" class="form-control" id="address" name="address" placeholder="Enter an address">
		<label for="phone_number">Phone Number</label>
		<input value="{{phone_number}}" type="text" class="form-control" id="phone_number" name="phone_number" placeholder="Enter a Phone Number">
	</div>
	<div class="flexCenter">
		<a href="/hospital/" type="button" class="btn btn-primary">Back</a>
		<button type="submit" class="btn btn-danger">Update</button>
		
	</div>
</form>