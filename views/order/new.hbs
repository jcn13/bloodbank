<h1>Create new Order</h1>
<form class="form" method="post" action="/order">
	<div class="form-group">
		<label for="bid">Blood Type</label>
		<select name="bid" id="bid" class="form-control">
		{{#each blood}}
			<option value="{{id}}">{{type}}</option>
		{{/each}}
		</select>
		<label for="hid">Hospital</label>
		<select name="hid" id="hid" class="form-control">
		{{#each hospital}}
			<option value="{{id}}">{{name}}</option>
		{{/each}}
		</select>
		<label for="bno">Blood Bank</label>
		<select name="bno" id="bno" class="form-control">
		{{#each bloodbank}}
			<option value="{{id}}">{{id}}</option>
		{{/each}}
		</select>		
	</div>
	<div class="flexCenter">
		<a href="/order/" type="button" class="btn btn-primary">Back</a>
		<button type="submit" class="btn btn-success">Create</button>
		
	</div>
</form>